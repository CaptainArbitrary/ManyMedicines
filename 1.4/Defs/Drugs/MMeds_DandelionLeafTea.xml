<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugBase">
    <defName>MMeds_DandelionLeafTea</defName>
    <label>dandelion leaf tea</label>
    <description>This tea made from medicinal herbs and dandelion leaves settles the stomach, stimulates the appetite and helps detoxify the liver and kidneys.</description>
    <descriptionHyperlinks>
      <HediffDef>MMeds_DandelionLeafTeaHigh</HediffDef>
      <HediffDef>MMeds_DandelionLeafTeaOverdose</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/MMeds_DandelionLeafTea</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>6.5</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <foodType>Fluid, Processed</foodType>
      <baseIngestTicks>210</baseIngestTicks>
      <nurseable>true</nurseable>
      <ingestSound>Ingest_Drink</ingestSound>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MMeds_DandelionLeafTeaHigh</hediffDef>
          <severity>0.25</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <workSkill>Cooking</workSkill>
      <soundWorking>Recipe_Brewing</soundWorking>
      <recipeUsers>
        <li>Campfire</li>
        <li>ElectricStove</li>
        <li>FueledStove</li>
      </recipeUsers>
      <productCount>1</productCount>
    </recipeMaker>
    <costList>
      <MedicineHerbal>1</MedicineHerbal>
      <MMeds_RawDandelionLeaves>4</MMeds_RawDandelionLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug" />
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>MMeds_DandelionLeafTeaHigh</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>dandelion leaf tea</label>
    <description>This tea made from medicinal herbs and dandelion leaves settles the stomach, stimulates the appetite and helps detoxify the liver and kidneys.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
      <li Class="MMeds.HediffCompProperties_TreatToxicBuildup">
        <severityPerDay>-0.24</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
        <label>wearing off</label>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
      </li>
      <li>
        <minSeverity>0.1</minSeverity>
        <hungerRateFactorOffset>0.3</hungerRateFactorOffset>
        <vomitMtbDays>-1.0</vomitMtbDays>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>intoxicated</label>
        <vomitMtbDays>0.7</vomitMtbDays>
        <painOffset>0.3</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.7</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <hediffGivers>
          <li Class="HediffGiver_Refresh">
            <hediff>MMeds_DandelionLeafTeaOverdose</hediff>
          </li>
          <li Class="HediffGiver_AddSeverity">
            <hediff>MMeds_DandelionLeafTeaHigh</hediff>
            <severityAmount>-1.0</severityAmount>
            <mtbHours>0</mtbHours>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>MMeds_DandelionLeafTeaOverdose</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>dandelion leaf tea overdose</label>
    <description>This person has drunk too much dandelion leaf tea. He or she will experience pain and nausea, and may suffer permanent kidney damage. The danger should pass in about a day.</description> <!-- FIXME: -->
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.98</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.85</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <painOffset>0.25</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.75</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <vomitMtbDays>0.04</vomitMtbDays>
        <painOffset>0.5</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.5</postFactor>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>MMeds_ChemicalDamageMinor</hediff>
            <mtbDays>2</mtbDays>
            <partsToAffect>
              <li>Kidney</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>

</Defs>
